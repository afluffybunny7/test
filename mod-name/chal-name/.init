#!/usr/bin/env python3
import subprocess
import sys
import os

output_path = "/challenge/output.txt"
script_path = "/challenge/grep_template.py"
input_path = "/challenge/input.yml"

# Confirm files exist
assert os.path.isfile(script_path), f"Missing script: {script_path}"
assert os.path.isfile(input_path), f"Missing input: {input_path}"

# Write to a file safely
with open(output_path, "w") as f:
    f.write("Made it\n")

# Run another Python script with arguments
subprocess.check_call([sys.executable, script_path, input_path])